<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/corners14appcolor"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_grey"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fromWho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_color"
        android:layout_below="@+id/type"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:textSize="20sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_greenschoolycoin"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_extrabold"
        android:layout_toLeftOf="@+id/image"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/remittanceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/app_grey"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sum"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/otherUserNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_grey"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:layout_toRightOf="@+id/userImage"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/justtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/userImage"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/app_grey"
        android:textSize="18dp"
        android:visibility="gone"
        />


        <TextView
            android:id="@+id/addFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/corners10dpappcolor"
            android:fontFamily="@font/montserrat_bold"
            android:layout_below="@+id/otherUserNick"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"/>


</RelativeLayout>